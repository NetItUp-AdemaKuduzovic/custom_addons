<?xml version="1.0"?>
    <odoo>

        <record id="estate_property_offers_list_view" model="ir.ui.view">
            <field name="name">estate_property_offer.view.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list editable="bottom" decoration-success="status == 'accepted'" decoration-danger="status == 'refused'">
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button name="action_accept_offer" type="object" string="" icon="fa-check" title="Accept Offer"/>
                    <button name="action_refuse_offer" type="object" string="" icon="fa-ban" title="Refuse Offer"/>
                </list>
            </field>
        </record>

        <record id="estate_property_offers_form_view" model="ir.ui.view">
            <field name="name">estate_property_offer.view.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="status"/>
                    </group>
                </form>
            </field>
        </record>   
    </odoo>